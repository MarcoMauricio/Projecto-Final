@using System.Configuration
<!DOCTYPE html>
<html lang="en" data-ng-app="EggOn.Core" data-ng-controller="AppController">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />

    <title data-ng-bind="pageTitle + ' - EggOn'">EggOn</title>

    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="EggOn Content Manager System">
    <meta name="keywords" content="content manager system cms eggon">
    <meta name="author" content="Flow Options">

    <link href="/Areas/Core/Assets/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <link href='http://fonts.googleapis.com/css?family=Droid+Sans:400,700' rel='stylesheet' type='text/css'>
    
    @Styles.Render("~/styles/generic")
    @Styles.Render("~/styles/app")

    <!-- HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
        <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->

    <script id="config" type="text/javascript">
        window.WebServiceUrl = '@ConfigurationManager.AppSettings["WebServiceUrl"]';
        window.WebDashboardUrl = '@ConfigurationManager.AppSettings["WebDashboardUrl"]';
    </script>
</head>
<body ng-style="CustomBack">
    <section ui-view autoscroll="false">
        <div style="position: absolute; top: 0; left: 0; right: 0; bottom: 0; width: 47px; height: 57px; margin: auto;">
            <i class="fa fa-spinner fa-spin fa-4x"></i>
        </div>
    </section>

    @Scripts.Render("~/scripts/generic")
    @Scripts.Render("~/scripts/app")
</body>
</html>
